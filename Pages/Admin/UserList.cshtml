@page
@model PhotoGalleryApp.Pages.Admin.UserListModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "User List";
}

<h2>User List</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Role(s)</th>
            <th>Last Login</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.UsersWithLoginInfo)
        {
            var roles = await UserManager.GetRolesAsync(new IdentityUser { Id = user.Id, UserName = user.Email, Email = user.Email });
            var isAdmin = roles.Contains("Admin");

            <tr class="@(isAdmin ? "table-warning" : "")">
                <td>
                    @user.Email
                    @if (isAdmin)
                    {
                        <span class="badge bg-warning text-dark ms-2">Admin</span>
                    }
                </td>
                <td>@string.Join(", ", roles)</td>
                <td>@(user.LastLoginTime?.ToString("dd-MMM-yyyy hh:mm tt") ?? "Never")</td>
                <td>
                    <a asp-page="/Index" asp-route-userId="@user.Id" class="btn btn-primary btn-sm">View Gallery</a>
                </td>
            </tr>
        }
    </tbody>
</table>
